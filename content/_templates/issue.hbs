<h1>{{ general.title }}</h1>
<blockquote>Current Status: {{ general.status }}</blockquote>
<div>
    <span>Grade: {{ general.grade }}</span><br>
    <span>Affects: {{#each general.affects}}{{serviceName this}} {{/each}}</span><br>
    <span>
        Created at: {{formatDate metadata.creationDate "yyyy LLL dd, hh:mm"}} |
        {{#if metadata.resolvedDate}}
            Resolved at: {{formatDate metadata.resolvedDate "yyyy LLL dd, hh:mm"}}
        {{else}}
            {{#if metadata.updatedData}}
                Last updated at: {{formatDate metadata.resolvedDate "yyyy LLL dd, hh:mm"}}
            {{/if}}
        {{/if}}
    </span><br>
</div>
<hr>

<div>
    <ul>
        {{#each updates}}
            <li>{{ status }}: {{ message }} ({{formatDate date "yyyy LLL dd, hh:mm"}})</li>
        {{/each}}
    </ul>
</div>
